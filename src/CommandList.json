{
  "help": {
    "command": "--help",
    "short": "-h",
    "description": "Display all control commands in the console"
  },
  "init": {
    "command": "--init",
    "description": "Initial React project, required argument '--name'",
    "required": {
      "name": {
        "command": "--name",
        "short": "-n",
        "type": "string"
      }
    }
  },
  "generate": {
    "command": "--generate",
    "short": "-g",
    "description": "Generate component. Required arguments '--name', '--component'. Default path to component src/modules/componentName. For custom path: -n path/to/componentName",
    "required": {
      "name": {
        "command": "--name",
        "short": "-n",
        "type": "string"
      },
      "component": {
        "command": "--component",
        "short": "-c",
        "type": "boolean"
      }
    }
  }
}
